{
  "compilerOptions": {
    "target": "ES2020", // Output JavaScript version
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "commonjs", // Module system
    "outDir": "./dist", // Output folder for compiled files
    "rootDir": "./src", // Source folder for TypeScript files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

  },
  "include": ["src", "../frontend/src/global.d.ts"], // Include all .ts files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude these folders from the compiler
  }
  